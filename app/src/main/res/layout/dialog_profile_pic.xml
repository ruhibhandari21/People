<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dimension10dp"
        android:layout_marginLeft="@dimen/dimension20dp"
        android:layout_marginRight="@dimen/dimension10dp"
        android:layout_marginTop="@dimen/dimension10dp"
        android:gravity="center_vertical"
        android:text="Company Logo"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dimension16dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/dialogBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dimension20dp"
        android:layout_marginRight="@dimen/dimension20dp"
        android:layout_marginTop="@dimen/dimension10dp"
        android:gravity="center"
        android:text="What would you like to do?"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dimension16dp" />


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension0.5dp"
        android:layout_below="@+id/dialogBody"
        android:layout_marginTop="@dimen/dimension10dp"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:id="@+id/linear_3view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginBottom="@dimen/dimension15dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimension10dp"
            android:layout_marginTop="@dimen/dimension10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimension10dp"
            android:text="Add"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dimension14dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension0.5dp"
            android:layout_below="@+id/edt_value"
            android:background="@color/colorPrimary"></View>

        <TextView
            android:id="@+id/remove_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimension10dp"
            android:layout_marginTop="@dimen/dimension10dp"
            android:layout_toRightOf="@+id/cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimension10dp"
            android:text="Remove"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dimension14dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension0.5dp"
            android:layout_below="@+id/remove_tv"
            android:background="@color/colorPrimary"></View>

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension10dp"
            android:layout_toRightOf="@+id/cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimension10dp"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimension15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear_3view"
        android:visibility="gone"
        >



    </LinearLayout>

</RelativeLayout>