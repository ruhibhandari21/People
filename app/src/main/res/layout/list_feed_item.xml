<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    >
    <android.support.v7.widget.CardView
    card_view:cardCornerRadius="@dimen/dimension3dp"
    android:elevation="@dimen/dimension5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimension10dp"
    android:layout_marginRight="@dimen/dimension10dp"
    android:layout_marginTop="@dimen/dimension10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/incProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include
            layout="@layout/linear_personal"/>
        </FrameLayout>

        <View
            android:id="@+id/viewProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension1dp"
            android:layout_below="@+id/incProfile"
            android:layout_marginTop="@dimen/dimension2dp"
            />

        <FrameLayout
            android:id="@+id/incPost"
            android:layout_below="@+id/viewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include
            layout="@layout/layout_img_desc"/>
        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>


